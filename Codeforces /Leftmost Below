#include <bits/stdc++.h>
using namespace std;
typedef long long ll;
 
int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
 
    int t;
    cin >> t;
 
    while (t--) {
       ll n;
       cin>>n;
       vector<ll>v(n),mn1(n);
       ll mn=LLONG_MAX;
       for(int i=0;i<n;i++){
        cin>>v[i];
        mn1[i]=min(mn,v[i]);
        mn=mn1[i];
       }
       string ans="YES";
       for(int i=1;i<n;i++){
        if(v[i]-mn1[i]>=mn1[i]){
            ans="NO";
            break;
        }
       }
       cout<<ans<<endl;
    }
 
    return 0;
}
